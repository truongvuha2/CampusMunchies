<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>CustomerFilter</filter-name>
        <filter-class>filter.CustomerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CustomerFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>GuestHome</servlet-name>
        <servlet-class>controller.guest.GuestHome</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>GuestLogin</servlet-name>
        <servlet-class>controller.guest.GuestLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerHome</servlet-name>
        <servlet-class>controller.customer.CustomerHome</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerLogout</servlet-name>
        <servlet-class>controller.customer.CustomerLogout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GuestMenu</servlet-name>
        <servlet-class>controller.guest.GuestMenu</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerMenu</servlet-name>
        <servlet-class>controller.customer.CustomerMenu</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GuestSearch</servlet-name>
        <servlet-class>controller.guest.GuestSearch</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerSearch</servlet-name>
        <servlet-class>controller.customer.CustomerSearch</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GuestRegister</servlet-name>
        <servlet-class>controller.guest.GuestRegister</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GuestFoodDetail</servlet-name>
        <servlet-class>controller.guest.GuestFoodDetail</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CustomerFoodDetail</servlet-name>
        <servlet-class>controller.customer.CustomerFoodDetail</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GuestHome</servlet-name>
        <url-pattern>/guest/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GuestLogin</servlet-name>
        <url-pattern>/guest/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerHome</servlet-name>
        <url-pattern>/customer/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerLogout</servlet-name>
        <url-pattern>/customer/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GuestMenu</servlet-name>
        <url-pattern>/guest/menu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerMenu</servlet-name>
        <url-pattern>/customer/menu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GuestSearch</servlet-name>
        <url-pattern>/guest/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerSearch</servlet-name>
        <url-pattern>/customer/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GuestRegister</servlet-name>
        <url-pattern>/guest/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GuestFoodDetail</servlet-name>
        <url-pattern>/guest/foodDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerFoodDetail</servlet-name>
        <url-pattern>/customer/foodDetail</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            /guest/home 
        </welcome-file>
    </welcome-file-list>
</web-app>
